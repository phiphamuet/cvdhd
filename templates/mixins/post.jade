mixin post(post)
    article(data-ks-editable=editable(user, {list: 'Post', id: post.id})).media
        .media-left
            a(href='/property/post/' + post.key)
                if post.image[0]
                    img(src=post.image[0].thumbnail(200, 200, "scale")).media-object
                else
                    img(src="http://placehold.it/80x80").media-object

        .media-body
            h3.media-heading
                a(href='/property/post/' + post.key)= post.name
            if post.publishedDate || post.author
                p.text-muted.text-small
                    if post.publishedDate
                        time= post._.publishedDate.format('MMMM Do, YYYY')
                        | |
                    if post.author
                        span by #{post.author.name.full}
            != post.content.brief
        script.
            var x = '#{post._.images}'